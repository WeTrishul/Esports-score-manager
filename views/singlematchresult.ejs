     <section class=" antialiased items-center bg-green-500 text-gray-600 pb-6 pt-6 px-4">
        <div class="flex flex-row  justify-center ">
            <!-- Table -->
            <div style="display: block;" id="teamTable" class="w-full overflow-y-auto max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
                <!-- <header class="px-5 py-4 border-b border-gray-100">
