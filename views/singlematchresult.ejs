 document.addEventListener('keydown', function(event) {
    if(event.keyCode == 37) {
        document.getElementById("teamTable").style.display = "block";
    document.getElementById("playerTable").style.display = "none";
    document.getElementById("topThreeplayer").style.display = "none";
    document.getElementById("myChart").style.display="none";
    }
    else if(event.keyCode == 38)
    {
        document.getElementById("teamTable").style.display = "none";
    document.getElementById("playerTable").style.display = "none";
    document.getElementById("topThreeplayer").style.display = "block";
    document.getElementById("myChart").style.display="none";
        
    }
    else if(event.keyCode == 39) {
        document.getElementById("teamTable").style.display = "none";
    document.getElementById("playerTable").style.display = "block";
    document.getElementById("topThreeplayer").style.display = "none";
    document.getElementById("myChart").style.display="none";
    }
    else if(event.keyCode==81)
    {
        
        document.getElementById("teamTable").style.display = "none";
        document.getElementById("myChart").style.display="block";
        document.getElementById("playerTable").style.display = "none";
        document.getElementById("topThreeplayer").style.display = "none";
    }
});
     </script>
