                <div class="p-3">
                    <div style="height: 20vh;" class="">
                        <table style="height: 20vh;" class="table-auto w-full " id="myTable">
                            <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-50">
                                <tr>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Rank</div>
                                    </th>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Team</div>
                                    </th>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Placement</div>
                                    </th>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Finish</div>
                                    </th>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">WWCD</div>
                                    </th>
                                    <th class="p-2 whitespace-nowrap">
                                        <div class="font-semibold text-left">Total</div>
                                  
                                </tr>
                            </thead>
                            <tbody class="text-sm divide-y divide-gray-100">
                                <%for(var i=0;i<teamleaderboards.length;i++){%>
                                <tr>
                                    <td class="p-2 whitespace-nowrap">
                                        <div class="text-left"><%=i+1%></div>
                                    </td>
                                    <td class="p-2 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 flex-shrink-0 mr-2 sm:mr-3"><img class="rounded-full h-12 w-12  object-cover" src="<%=teamleaderboards[i].Logo%>" width="40" height="40" alt="Alex Shatov"></div>
                                            <div class="font-medium text-gray-800"><%=teamleaderboards[i].teamname%></div>
                                        </div>
                                    </td>
                                    <td class="p-2 whitespace-nowrap">
                                        <div class="text-left"><%=teamleaderboards[i].placement%></div>
                                    </td>
                                    <td class="p-2 whitespace-nowrap">
                                        <div class="text-left font-medium text-green-500"><%=teamleaderboards[i].teamFinnish%></div>
                                    </td>
                                    <td class="p-2 whitespace-nowrap">
                                        <div class="text-left font-medium text-green-500"><%=i.WWCD%></div>
                                    </td>
                                    <td class="p-2 whitespace-nowrap">
                                        
                                        <% if(i.pointDiff > 0) {%>
                                            <div class="text-lg text-center"><%=i.teamPoint%> <span class=" text-sm text-green-600">+ <%=i.pointDiff%> </span></div>
                                            <%}%>
                                            <% if(i.pointDiff < 0) {%>
                                                <div class="text-lg text-center"><%=i.teamPoint%> <span class="text-sm text-red-600"><%=i.pointDiff%> </span></div>
                                                <%}%>
                                                <% if(i.pointDiff == 0) {%>
                                                    <div class="text-lg text-center"><%=i.teamPoint%>  </span></div>
                                                    <%}%>

                                    </td>
                                </tr>
                                <%}%>
                               
                               
                              
                                
                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>





        <!-- Players table -->



