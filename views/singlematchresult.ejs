<!-- component -->


<script>
  
  var a = '<%=chartkliyeteams%>'
  var b = '<%=chartkliyekills%>'         
   var xValues = a.split(",");

var yValues = b.split(",");
var barColors = ["blue"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Projection"
    }
  }
});
  </script>
 


 
 <script>
     $(document).ready( function () {
     $('#myTable').DataTable();
     $('#secTable').DataTable();

 } );
